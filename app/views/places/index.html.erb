<h1>Places</h1>

<% if current_user %>
  <div class="row">
    <% @places.each do |place| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= place.name %></h5>
            <%= link_to "Show Place", place_path(place), class: "btn btn-info" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= link_to "New Place", new_place_path, class: "btn btn-success" %>
  </div>
<% else %>
  <div class="alert alert-warning">
    You must <a href="/login" class="btn btn-info btn-sm">log in</a> to see places.
  </div>
<% end %>
