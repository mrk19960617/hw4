<h1 class="mb-4"><%= @place["name"] %></h1>

<div class="mb-3">
  <%= link_to "New Entry", "/entries/new?place_id=#{@place["id"]}", class: "btn btn-primary" %>
  <%= link_to "Back to All Places", "/places", class: "btn btn-secondary" %>
</div>

<h2 class="mb-3">My Entries</h2>

<div class="row">
  <% for entry in @entries %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if entry.image.attached? %>
          <%= image_tag entry.image, class: "card-img-top img-fluid", style: "max-height: 200px; object-fit: cover;" %>
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <p class="card-text"><%= entry["description"] %></p>
          <p class="card-text text-muted"><%= entry["occurred_on"].strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
