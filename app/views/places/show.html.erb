<h1 class="mb-4"><%= @place.name %></h1>

<% if current_user %>
  <div class="mb-3">
    <%= link_to "New Entry", new_entry_path(place_id: @place.id), class: "btn btn-primary me-2" %>
    <%= link_to "Back to All Places", places_path, class: "btn btn-secondary" %>
  </div>

  <h2 class="mb-3">My Entries</h2>

  <div class="row">
    <% @entries.each do |entry| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <% if entry.image.attached? %>
            <%= image_tag entry.image, class: "card-img-top", style: "max-height: 200px; object-fit: cover;" %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= entry.title %></h5>
            <p class="card-text"><%= entry.description %></p>
            <p class="card-text text-muted"><%= entry.occurred_on.strftime("%B %d, %Y") %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% else %>
  <div class="alert alert-warning">
    You must <a href="/login" class="btn btn-info btn-sm">log in</a> to see entries.
  </div>
<% end %>
