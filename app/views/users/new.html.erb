<h1 class="mb-4">Sign Up</h1>

<%= form_with url: "/users", local: true do %>
  <div class="mb-3">
    <label for="first_name">First Name</label>
    <%= text_field_tag :first_name, nil, class: "form-control", id: "first_name", required: true %>
  </div>

  <div class="mb-3">
    <label for="last_name">Last Name</label>
    <%= text_field_tag :last_name, nil, class: "form-control", id: "last_name", required: true %>
  </div>

  <div class="mb-3">
    <label for="email">Email</label>
    <%= email_field_tag :email, nil, class: "form-control", id: "email", required: true %>
  </div>

  <div class="mb-3">
    <label for="password">Password</label>
    <%= password_field_tag :password, nil, class: "form-control", id: "password", required: true %>
  </div>

  <div class="mb-3">
    <label for="password_confirmation">Confirm Password</label>
    <%= password_field_tag :password_confirmation, nil, class: "form-control", id: "password_confirmation", required: true %>
  </div>

  <%= submit_tag "Sign Up", class: "btn btn-success" %>
<% end %>
