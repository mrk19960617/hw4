<h1 class="mb-4">Login</h1>

<%= form_with url: "/login", local: true do %>
  <div class="mb-3">
    <label for="email_input">Email</label>
    <%= email_field_tag :email, nil, class: "form-control", id: "email_input", required: true %>
  </div>

  <div class="mb-3">
    <label for="password_input">Password</label>
    <%= password_field_tag :password, nil, class: "form-control", id: "password_input", required: true %>
  </div>

  <%= submit_tag "Login", class: "btn btn-primary" %>
<% end %>
